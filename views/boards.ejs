<%- include('boards-header', {href: '../stylesheets/boards.css' });%>        
        <div id="mainbody">
            <div id="welcome">
                <p>Welcome <%= user.username %></p>
            </div>

            <div id="add-board-dropdown-div">
                <button type="button" id="add-new-board-btn">Add New Board</button>
                <!-- Dropdown -->
                <div id="board-dropdown" class="board-dropdown-content">
                    <form id="board-form">
                        <input type="text" id="name" name="name" autocomplete="off" placeholder="Add a Board...">
                        <button id="board-submit-btn" type="submit">Submit</button>
                    </form>
                </div>
            </div>

            <!-- List of boards -->
            <div id="personalBoards">
                <img src="../images/personal.png">
                <p>Personal Boards</p>
            </div>
            
            <div id="boardsList">
                <ul class="ul-boards">
                    <!-- <a href="/board"><li><button type="button" class="firstBoard">Board 1</button></li></a> -->
                    
                    <!-- Create an id that will build a url to use for the href -->

                </ul>
            </div>
        </div>
<%- include('boards-footer', {script: '../javascripts/boards.js' });%>
